<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> : <%= dose.ingredient.name %> <%= link_to "Delete Ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%></p>
<% end %>
<%= cl_image_tag @cocktail.photo %>

<%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to Main", cocktails_path, class: "btn btn-success" %>

