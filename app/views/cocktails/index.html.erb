
<div class="banner">
  <div class="banner-content">
    <h1>Cocktails</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <%= link_to "Create A New Cocktail", new_cocktail_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

