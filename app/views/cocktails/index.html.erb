<h1>Cocktails</h1>
<%= image_tag "cocktail_banner.jpg", {class: "banner", id: "main-banner"}%>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <%= link_to "Create A New Cocktail", new_cocktail_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

