<h1>Make Your Own Cocktail</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.submit 'Create My Cocktail', class: "btn btn-danger" %>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <%= link_to "Back to Main", cocktails_path, class: "btn btn-success" %>
    </div>
</div>









